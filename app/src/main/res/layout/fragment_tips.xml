<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.tips.TipsFragment">


    <!-- Header Container -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">


            <TextView
                android:id="@+id/tvCs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="CS 3102"
                android:textColor="@color/grey"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:text="TIPS"
                android:textColor="@color/blue"
                android:textSize="11sp" />


            <TextView
                android:id="@+id/tvGroupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="GROUPNAME"
                android:textColor="#757575"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerContainer"
        app:layout_constraintBottom_toBottomOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/title_fire_safety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIRE SAFETY"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                android:textColor="#000000"/>


            <TextView
                android:id="@+id/title_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tips!"
                android:textAlignment="center"
                android:textSize="48sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                android:textColor="#FF0000"/>


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fire safety is essential for protecting lives and property. Follow these tips to prevent fires and stay safe in case of emergencies."
                android:textAlignment="center"
                android:fontFamily="@font/inter"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>


            <TextView
                android:id="@+id/section1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Section 1: Fire Prevention"
                android:textSize="24sp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:fontFamily="@font/inter"
                android:layout_marginBottom="16dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Install smoke alarms on every level of your home and inside bedrooms. Test them monthly and replace batteries twice a year."
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Keep flammable materials such as curtains, towels, and papers away from heat sources like candles, heaters, and stoves."
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Avoid overloading electrical outlets and extension cords. Inspect cords for damage and replace if necessary."
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Never leave cooking food unattended, and keep flammable items away from the stove."
                        android:fontFamily="@font/inter"/>
                </LinearLayout>


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:src="@drawable/one"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>


            <!-- Section 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:background="#C41E3A">


                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="150dp"
                    android:src="@drawable/two"
                    android:layout_margin="16dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">


                    <TextView
                        android:id="@+id/section2_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Section 2: Emergency Preparedness"
                        android:textSize="24sp"
                        android:textColor="#FFD700"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="16dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Develop a fire escape plan with two exit routes from each room. Practice the plan regularly with all family members."
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Teach children how to stop, drop, and roll if their clothes catch fire."
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Keep a fire extinguisher in key locations such as the kitchen, garage, and near sleeping areas. Know how to use it properly."
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• In case of a fire, crawl low under smoke to escape. Feel closed doors for heat before opening and use a towel to cover your nose and mouth."
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/inter"/>
                </LinearLayout>
            </LinearLayout>


            <!-- Section 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/section3_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Section 3: During a Fire"
                        android:textSize="24sp"
                        android:textColor="#FF0000"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="16dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• If a fire occurs, sound the alarm, and evacuate immediately. Do not waste time gathering belongings."
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• If trapped, close doors and seal gaps with towels or clothing. Signal for help by waving a flashlight or cloth from a window."
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Call emergency services once safely outside and provide your address and details about the fire."
                        android:fontFamily="@font/inter"
                        android:layout_marginBottom="8dp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Never re-enter a burning building. Wait for firefighters to arrive and handle the situation."
                        android:fontFamily="@font/inter"/>
                </LinearLayout>


                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:src="@drawable/three"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
